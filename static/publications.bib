keywords = {Autoregressive models,Geographical Information System,Geometric constraints,Mediterranean Sea,Null model,Primary production,Species pattern,Temperature},
pages = {253--267},
publisher = {Inter-Research, Nordbuente 23 Oldendorf/Luhe 21385 Germany,},
title = {{Fish diversity patterns in the Mediterranean Sea: Deviations from a mid-domain model}},
volume = {376},
year = {2009}
}
